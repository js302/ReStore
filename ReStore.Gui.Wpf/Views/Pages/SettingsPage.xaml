<Page x:Class="ReStore.Gui.Wpf.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="{DynamicResource ApplicationBackgroundBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Settings" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
        <StackPanel Grid.Row="1" Margin="0,12,0,0" Orientation="Vertical">
            <Border Padding="12" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Appearance" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Theme" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <ComboBox x:Name="ThemeSelector" Width="160" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                            <ComboBoxItem Content="System"/>
                            <ComboBoxItem Content="Light"/>
                            <ComboBoxItem Content="Dark"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Padding="12" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Margin="0,12,0,0">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Storage" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Default storage" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <ComboBox x:Name="StorageCombo" Width="300" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <CheckBox x:Name="ShowConfiguredOnly" Content="Show only configured providers" Margin="120,6,0,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button x:Name="OpenConfigBtn" Content="Open config location" Width="200"/>
                        <Button x:Name="LoadExampleBtn" Content="Load example config" Margin="8,0,0,0" Width="200"/>
                    </StackPanel>

                    <!-- Providers -->
                    <Expander Header="Local" Margin="0,12,0,0" IsExpanded="False">
                        <StackPanel Margin="8,8,8,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Path" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="LocalPathBox" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Button x:Name="SaveLocalBtn" Content="Save" Width="120"/>
                                <Button x:Name="TestLocalBtn" Content="Test" Width="120" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Amazon S3" Margin="0,8,0,0" IsExpanded="False">
                        <StackPanel Margin="8,8,8,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Access Key Id" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="S3AccessKey" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Secret Access Key" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="S3SecretKey" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Region" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="S3Region" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Bucket Name" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="S3Bucket" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Button x:Name="SaveS3Btn" Content="Save" Width="120"/>
                                <Button x:Name="TestS3Btn" Content="Test" Width="120" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Google Drive" Margin="0,8,0,0" IsExpanded="False">
                        <StackPanel Margin="8,8,8,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Client ID" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="GDClientId" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Client Secret" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="GDClientSecret" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Token Folder" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="GDTokenFolder" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Backup Folder Name" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="GDBackupFolder" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Button x:Name="SaveGDriveBtn" Content="Save" Width="120"/>
                                <Button x:Name="TestGDriveBtn" Content="Test" Width="120" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <Expander Header="GitHub" Margin="0,8,0,0" IsExpanded="False">
                        <StackPanel Margin="8,8,8,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Token" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="GhToken" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Owner" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="GhOwner" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Repo" Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBox x:Name="GhRepo" Width="360" Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Button x:Name="SaveGitHubBtn" Content="Save" Width="120"/>
                                <Button x:Name="TestGitHubBtn" Content="Test" Width="120" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>