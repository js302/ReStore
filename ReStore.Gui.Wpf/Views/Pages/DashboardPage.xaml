<Page x:Class="ReStore.Gui.Wpf.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" Background="{DynamicResource ApplicationBackgroundBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Dashboard" FontSize="20" FontWeight="SemiBold" Margin="0,0,12,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Button x:Name="ValidateBtn" Content="Validate Config" />
            <Button x:Name="StartWatcherBtn" Content="Start Watcher" Margin="8,0,0,0" />
            <Button x:Name="StopWatcherBtn" Content="Stop Watcher" Margin="8,0,0,0" />
        </StackPanel>

        <Border Grid.Row="1" Padding="12" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Margin="0,12,0,12">
            <DockPanel>
                <TextBlock Text="Logs" FontWeight="SemiBold" Margin="0,0,0,8" DockPanel.Dock="Top" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogBox" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <Border Grid.Row="2" Margin="0,8,0,0" Padding="10" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8">
            <TextBlock x:Name="StatusText" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
        </Border>
    </Grid>
</Page>