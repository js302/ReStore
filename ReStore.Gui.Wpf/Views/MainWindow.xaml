<Window x:Class="ReStore.Gui.Wpf.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ReStore.Gui.Wpf.Views"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework" mc:Ignorable="d" Title="ReStore" Height="560" Width="900" WindowStartupLocation="CenterScreen" UseLayoutRounding="True" WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="False" Background="{DynamicResource ApplicationBackgroundBrush}" FontFamily="Segoe UI">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32" CornerRadius="8" GlassFrameThickness="0" ResizeBorderThickness="6" UseAeroCaptionButtons="False" />
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="SidebarNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorSecondaryBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorSecondaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Caption buttons (minimize/maximize) style -->
        <Style x:Key="CaptionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorSecondaryBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close button gets a red hover like Windows 11 -->
        <Style x:Key="CaptionCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Custom Title Bar -->
        <Grid x:Name="TitleBar" Grid.Row="0" Grid.ColumnSpan="2" Background="{DynamicResource ApplicationBackgroundBrush}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Drag area (not hit-test visible in chrome so dragging works) -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                <TextBlock Text="ReStore" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
            </StackPanel>
            <!-- Caption buttons must be interactive in chrome -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                <Button x:Name="MinButton" Style="{StaticResource CaptionButtonStyle}" ToolTip="Minimize">
                    <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE921;"/>
                </Button>
                <Button x:Name="MaxButton" Style="{StaticResource CaptionButtonStyle}" ToolTip="Maximize/Restore">
                    <TextBlock x:Name="MaxIcon" FontFamily="{StaticResource IconFont}" Text="&#xE922;"/>
                </Button>
                <Button x:Name="CloseButton" Style="{StaticResource CaptionCloseButtonStyle}" ToolTip="Close">
                    <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE8BB;"/>
                </Button>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Grid.Column="0" Margin="0" Background="{DynamicResource ApplicationBackgroundBrush}" BorderThickness="0">
            <DockPanel>
                <Border DockPanel.Dock="Top" Padding="12" Margin="0,0,0,12" Background="{DynamicResource ApplicationBackgroundBrush}" CornerRadius="8" BorderThickness="0">
                    <TextBlock Text="ReStore" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                </Border>
                <StackPanel>
                    <Button x:Name="NavDashboard" Style="{StaticResource SidebarNavButtonStyle}" Margin="0,0,0,8" Tag="Dashboard">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE80F;" Margin="0,0,8,0"/>
                            <TextBlock Text="Dashboard"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavSettings" Style="{StaticResource SidebarNavButtonStyle}" Tag="Settings">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE713;" Margin="0,0,8,0"/>
                            <TextBlock Text="Settings"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <Frame Grid.Row="1" Grid.Column="1" x:Name="ContentFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>
    </Grid>
</Window>