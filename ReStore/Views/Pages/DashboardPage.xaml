<Page x:Class="ReStore.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" Background="{DynamicResource ApplicationBackgroundBrush}" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Dashboard" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="Monitor and control your backup operations" FontSize="13" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Backups Card -->
                <Border Grid.Column="0" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20" Margin="0,0,8,0" Effect="{StaticResource CardShadow}">
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE896;" FontSize="24" Foreground="{DynamicResource AccentFillColorDefaultBrush}" Margin="0,0,0,8" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="TotalBackupsText" Text="0" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Text="Total Backups" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,4,0,0" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Last Backup Card -->
                <Border Grid.Column="1" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20" Margin="4,0,4,0" Effect="{StaticResource CardShadow}">
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE823;" FontSize="24" Foreground="#10B981" Margin="0,0,0,8" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="LastBackupText" Text="Never" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" TextWrapping="Wrap" HorizontalAlignment="Left"/>
                        <TextBlock Text="Last Backup" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,4,0,0" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Watched Directories Card -->
                <Border Grid.Column="2" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20" Margin="4,0,4,0" Effect="{StaticResource CardShadow}">
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE8B7;" FontSize="24" Foreground="#F59E0B" Margin="0,0,0,8" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="WatchedDirsText" Text="0" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Text="Watched Folders" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,4,0,0" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Watcher Status Card -->
                <Border Grid.Column="3" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20" Margin="8,0,0,0" Effect="{StaticResource CardShadow}">
                    <StackPanel HorizontalAlignment="Left">
                        <Ellipse x:Name="StatusIndicator" Width="24" Height="24" Fill="#EF4444" Margin="0,0,0,8" HorizontalAlignment="Left">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#EF4444" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock x:Name="WatcherStatusText" Text="Stopped" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" HorizontalAlignment="Left"/>
                        <TextBlock Text="Watcher Status" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,4,0,0" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Action Buttons -->
            <Border Grid.Row="2" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,16" Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="Quick Actions" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button x:Name="StartWatcherBtn" Content="Start Watcher" Padding="20,10" Cursor="Hand"/>
                            <Button x:Name="StopWatcherBtn" Content="Stop Watcher" Margin="12,0,0,0" Padding="20,10" Cursor="Hand"/>
                            <Button x:Name="ValidateBtn" Content="Validate Config" Margin="12,0,0,0" Padding="20,10" Cursor="Hand"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="ManualBackupBtn" Content="Manual Backup" Padding="20,10" Cursor="Hand"/>
                            <Button x:Name="RestoreBtn" Content="Restore Backup" Margin="12,0,0,0" Padding="20,10" Cursor="Hand"/>
                            <Button x:Name="SystemBackupBtn" Content="System Backup" Margin="12,0,0,0" Padding="20,10" Cursor="Hand" Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Backup History Section -->
            <Border Grid.Row="3" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,16" Effect="{StaticResource CardShadow}">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE81C;" FontSize="18" VerticalAlignment="Center" Foreground="{DynamicResource AccentFillColorDefaultBrush}" Margin="0,0,8,0"/>
                        <TextBlock Text="Recent Backups" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <Button x:Name="RefreshHistoryBtn" Content="â†»" FontSize="16" FontWeight="Bold" Padding="8,4" Margin="12,0,0,0" Cursor="Hand" ToolTip="Refresh backup history"/>
                    </StackPanel>
                    <Border Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="6" MaxHeight="300">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="BackupHistoryList" Padding="8">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" FontFamily="{StaticResource IconFont}" Text="&#xE8B7;" FontSize="16" VerticalAlignment="Center" Foreground="{DynamicResource AccentFillColorDefaultBrush}" Margin="0,0,12,0"/>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Directory}" FontSize="13" FontWeight="Medium" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:MMM dd, yyyy HH:mm:ss}'}" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,0"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" Text="{Binding TypeLabel}" FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                                <Button Grid.Column="3" Content="Restore" Tag="{Binding Path}" Padding="8,4" FontSize="11" Cursor="Hand" Click="RestoreBackupBtn_Click"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </DockPanel>
            </Border>

            <!-- Logs Section -->
            <Border Grid.Row="4" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,16" Effect="{StaticResource CardShadow}">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE7C3;" FontSize="18" VerticalAlignment="Center" Foreground="{DynamicResource AccentFillColorDefaultBrush}" Margin="0,0,8,0"/>
                        <TextBlock Text="Activity Logs" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <Button x:Name="ClearLogsBtn" Content="Clear" FontSize="12" Padding="8,4" Margin="12,0,0,0" Cursor="Hand" ToolTip="Clear logs"/>
                    </StackPanel>
                    <Border Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="6" Padding="12" MaxHeight="300">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <TextBox x:Name="LogBox" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" Background="Transparent" BorderThickness="0" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        </ScrollViewer>
                    </Border>
                </DockPanel>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="5" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16,12" Margin="0,0,0,8" Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="StatusText" Grid.Column="0" FontSize="13" FontWeight="Medium" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <TextBlock x:Name="StorageInfoText" Grid.Column="1" FontSize="12" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>