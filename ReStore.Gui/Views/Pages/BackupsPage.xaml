<Page x:Class="ReStore.Gui.Views.Pages.BackupsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" Background="{DynamicResource ApplicationBackgroundBrush}" TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" Loaded="Page_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Backup Manager" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
            <TextBlock Text="Browse, restore, and manage your backups" FontSize="13" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Filters and Actions -->
        <Border Grid.Row="1" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,16" Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search and Filter -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchBox" Grid.Column="0" MinWidth="300" ToolTip="Search by directory name" VerticalContentAlignment="Center" Padding="8"/>

                    <ComboBox x:Name="FilterTypeCombo" Grid.Column="1" MinWidth="150" Margin="12,0,0,0" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="All Types" Tag="all" IsSelected="True"/>
                        <ComboBoxItem Content="Full Backups" Tag="full"/>
                        <ComboBoxItem Content="Differential" Tag="diff"/>
                    </ComboBox>

                    <ComboBox x:Name="SortCombo" Grid.Column="2" MinWidth="150" Margin="12,0,0,0" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Newest First" Tag="newest" IsSelected="True"/>
                        <ComboBoxItem Content="Oldest First" Tag="oldest"/>
                        <ComboBoxItem Content="Directory A-Z" Tag="dir_asc"/>
                        <ComboBoxItem Content="Directory Z-A" Tag="dir_desc"/>
                    </ComboBox>

                    <Button x:Name="RefreshBtn" Grid.Column="3" Content="🔄 Refresh" Padding="12,8" Margin="12,0,0,0" Cursor="Hand"/>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock Text="Selected Actions:" FontSize="13" FontWeight="Medium" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}" Margin="0,0,12,0"/>
                    <Button x:Name="RestoreSelectedBtn" Content="📥 Restore Selected" Padding="12,8" Cursor="Hand" IsEnabled="False"/>
                    <Button x:Name="DeleteSelectedBtn" Content="🗑️ Delete Selected" Padding="12,8" Margin="12,0,0,0" Cursor="Hand" IsEnabled="False"/>
                    <Button x:Name="SelectAllBtn" Content="Select All" Padding="12,8" Margin="12,0,0,0" Cursor="Hand"/>
                    <Button x:Name="DeselectAllBtn" Content="Deselect All" Padding="12,8" Margin="12,0,0,0" Cursor="Hand"/>

                    <Rectangle Width="1" Fill="{DynamicResource DividerStrokeColorDefaultBrush}" Margin="16,0"/>

                    <TextBlock x:Name="StatsText" Text="0 backups" FontSize="12" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Backups List -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="20" Effect="{StaticResource CardShadow}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE81C;" FontSize="18" VerticalAlignment="Center" Foreground="{DynamicResource AccentFillColorDefaultBrush}" Margin="0,0,8,0"/>
                    <TextBlock Text="All Backups" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="BackupsList" Padding="0,0,0,8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="6" Padding="16" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Checkbox -->
                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,12,0"/>

                                        <!-- Icon -->
                                        <Border Grid.Column="1" Width="40" Height="40" Background="{DynamicResource AccentFillColorDefaultBrush}" CornerRadius="6" Margin="0,0,12,0">
                                            <TextBlock FontFamily="{StaticResource IconFont}" Text="&#xE8B7;" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Info -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Directory}" FontSize="14" FontWeight="Medium" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,2,0,0">
                                                <Run Text="{Binding Timestamp, StringFormat='{}{0:MMM dd, yyyy HH:mm:ss}'}"/>
                                                <Run Text="•"/>
                                                <Run Text="{Binding TypeLabel}"/>
                                                <Run Text="•"/>
                                                <Run Text="{Binding SizeLabel}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Path}" FontSize="10" FontFamily="Consolas" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Margin="0,2,0,0" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- Status Badge -->
                                        <Border Grid.Column="3" Background="{Binding StatusColor}" CornerRadius="4" Padding="8,4" Margin="0,0,8,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding StatusText}" FontSize="10" FontWeight="SemiBold" Foreground="White"/>
                                        </Border>

                                        <!-- Action Buttons -->
                                        <Button Grid.Column="4" Content="📥" ToolTip="Restore" FontSize="16" Padding="8" Margin="0,0,4,0" Cursor="Hand" Tag="{Binding}" Click="RestoreBackup_Click"/>
                                        <Button Grid.Column="5" Content="ℹ️" ToolTip="Details" FontSize="16" Padding="8" Margin="0,0,4,0" Cursor="Hand" Tag="{Binding}" Click="ShowDetails_Click"/>
                                        <Button Grid.Column="6" Content="🗑️" ToolTip="Delete" FontSize="16" Padding="8" Cursor="Hand" Tag="{Binding}" Click="DeleteBackup_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Page>
